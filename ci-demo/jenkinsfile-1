pipeline {
    agent any

    tools {
        jdk 'JDK-21'         // El nombre que configuraste en Jenkins
        maven 'Maven-3.9.11' // El nombre que configuraste en Jenkins
    }

    stages{
        stage('Build') {
            steps {
                dir('ci-demo') {
                    bat 'mvn clean compile'
                }
            }
        }

        stage('Test') {
            steps {
                dir('ci-demo') {
                    bat 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                dir('ci-demo') {
                    bat 'mvn package'
                }
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            echo '¡Build y pruebas exitosas!'
        }
        failure {
            echo 'Algo salió mal en el build.'
        }
    }
}







